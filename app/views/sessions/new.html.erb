<div class="all-forms">
  <h4>Please Login</h4>
  <br>
  <div class = "errors">
    <% if @errors %>
      <%= @errors %>
    <% end %>
  </div>
  <div id="login-form">
   <%= form_for :session, url: login_path do |f| %>
      <div class = "input-field">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div class = "input-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    	</div>
      <%= f.submit "Login"%>
    <% end %>
  </div>

  <p> New User? <%= link_to("Sign up now", signup_path ) %></p>
</div>