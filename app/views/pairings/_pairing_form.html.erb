<%= form_for :pairing, url: pairings_path do |f| %>
	<div class='input-field'>
		<%= f.label :"whom" %>
		<%= f.collection_select(:pairing, :guest_id, guests, :id, :full_name) %>
	</div>
	<div class='input-field'>
		<%= f.label :"with whom" %>
		<%= f.collection_select(:pairing, :pair_id, guests, :id, :full_name) %>
	</div>
	<%= f.hidden_field(:event_id, value: current_event.id) %>
	<%= f.submit "Confirm" %>
<% end %>